<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mrbrainy.app.BrainGame"
    android:background="@drawable/brainybg"
    style="@style/Theme.AppCompat.Light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/questionNumber"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:textColor="#000"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/question"
        android:layout_below="@+id/questionNumber"
        android:layout_alignLeft="@+id/questionNumber"
        android:layout_marginTop="28dp"
        android:textColor="#000"
        android:singleLine="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a1"
        android:background="#ff33b5e5"
        android:layout_above="@+id/a5"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a2"
        android:background="#ff99cc00"
        android:layout_above="@+id/a1"
        android:layout_alignLeft="@+id/a1"
        android:layout_alignStart="@+id/a1"
        android:clickable="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a3"
        android:background="#ffff4444"
        android:layout_above="@+id/a4"
        android:layout_alignLeft="@+id/a1"
        android:layout_alignStart="@+id/a1"
        android:clickable="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a4"
        android:background="#ffffbb33"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/a3"
        android:layout_alignStart="@+id/a3"
        android:layout_marginBottom="46dp"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a5"
        android:background="#ffaa66cc"
        android:layout_above="@+id/a3"
        android:layout_alignLeft="@+id/a3"
        android:layout_alignStart="@+id/a3"
        android:clickable="true"
        android:layout_marginBottom="10dp" />


</RelativeLayout>
